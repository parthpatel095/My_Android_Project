<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/light_GRAY">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/GRAY"
        android:text="FITNESS GYM"
        android:textAlignment="center"
        android:textColor="@color/Yallow"
        android:textSize="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=" Home Page"
        android:textColor="@color/Yallow"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="150dp"
        android:layout_height="193dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="45sp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.279"
        android:backgroundTint="@color/GRAY">

        <ImageView
            android:id="@+id/tmg1"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:srcCompat="@drawable/images2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="37dp"
             android:layout_marginTop="156dp"
            android:text="LOSS WIGHT"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/Yallow"
            android:clickable="true"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="150dp"
        android:layout_height="193dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="45sp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277"
        android:backgroundTint="@color/GRAY">

        <ImageView
            android:id="@+id/tmg2"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:srcCompat="@drawable/images4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="156dp"
            android:text="GET BODY"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/Yallow"
            android:clickable="false"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView3"
        android:layout_width="150dp"
        android:layout_height="193dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="45sp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.793"
        android:backgroundTint="@color/GRAY">

        <ImageView
            android:id="@+id/tmg3"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:srcCompat="@drawable/images5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="156dp"
            android:text="LISTEN MUSIC"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/Yallow"
            android:clickable="true"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView4"
        android:layout_width="150dp"
        android:layout_height="193dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="45sp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.793"
        android:backgroundTint="@color/GRAY">

        <ImageView
            android:id="@+id/tmg4"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:srcCompat="@drawable/images6"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="156dp"
            android:text="GOOGLE MAP"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/Yallow"
            android:clickable="true"/>

    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>